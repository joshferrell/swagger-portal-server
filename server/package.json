{
    "name": "swagger-portal-server",
    "version": "1.0.0",
    "description": "Swagger Server that loads and saves swagger files",
    "main": "index.js",
    "repository": "git@github.com:joshferrell/swagger-portal-server.git",
    "author": "Josh Ferrell",
    "license": "MIT",
    "scripts": {
        "test": "DEBUG=true jest --watch",
        "build": "babel-node src/server.js",
        "start": "DEBUG=true nodemon src/server.js --exec babel-node",
        "lint": "eslint ./src/**/*.js",
        "coverage": "DEBUG=true jest --coverage"
    },
    "dependencies": {
        "bunyan": "^1.8.10",
        "dotenv": "^4.0.0",
        "good": "^7.1.0",
        "good-bunyan": "^1.2.0",
        "hapi": "^16.1.1",
        "joi": "^10.4.1",
        "pg": "^6.1.5",
        "pg-hstore": "^2.3.2",
        "sequelize": "^3.30.4"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/vendor/**",
            "!**/index.js"
        ]
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-eslint": "^7.2.3",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^14.1.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^4.0.0",
        "eslint-plugin-react": "^6.10.3",
        "jest": "^19.0.2",
        "nodemon": "^1.11.0"
    }
}
